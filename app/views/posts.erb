<h1>All posts</h1>
<% @posts.each do |p|%>
  <a href='/posts/<%= p.id %>'><h3><%= p.title %></h3></a>
  <p>by <%= p.user.username %>
  <hr>
<% end %>

<hr>

<% if logged_in? %>
  <form action="/posts" method="post">
    <h2>Create a new post:</h2>
    <br>
    <input type="text" name="post[title]" placeholder='title'>
    <br>
    <input type="text" name="post[url]" placeholder='url'>
    <br>
    <input type="submit" value='new post'>
  </form>

  <hr>
<% end %>
